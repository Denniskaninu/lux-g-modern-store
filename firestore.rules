rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Public can read/list products
    match /products/{productId} {
      allow list, get: if true;
      allow write: if request.auth != null; // Only authenticated users can write (create, update, delete)
    }

    // Admins (authenticated users) can do anything with sales data
    match /sales/{saleId} {
      allow read, write: if request.auth != null;
    }
  }
}
