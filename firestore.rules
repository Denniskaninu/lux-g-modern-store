rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Products can be read by anyone for the storefront,
    // but only an authenticated admin can manage them.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Sales data should only be accessible by an authenticated admin.
    match /sales/{saleId} {
      allow read, write: if request.auth != null;
    }
  }
}
